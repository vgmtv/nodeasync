{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "lib": ["es2015", "esnext"],
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./build",
    "types": ["jest", "node"]
  },
  "include": ["src/**/*.ts"]
}

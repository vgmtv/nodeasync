{
  "name": "@vgm/nodeasync",
  "version": "1.3.0",
  "description": "Node promisified functions",
  "main": "dist/index.js",
  "typings": "build/index.d.ts",
  "module": "build/index.js",
  "repository": "https://github.com/vgmtv/nodeasync",
  "license": "MIT",
  "author": {
    "name": "dev",
    "email": "dev@vgm.tv"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "tag": "latest",
    "access": "public"
  },
  "files": [
    "dist/*",
    "build/*"
  ],
  "scripts": {
    "watch:parcel": "parcel watch src/index.ts --target node",
    "watch:tsc": "tsc --watch",
    "build:parcel": "parcel build build/index.js --target node",
    "build:tsc": "tsc -p tsconfig.build.json",
    "start:bundle": "run-p watch:tsc watch:parcel",
    "start": "nodemon --watch src -e ts,tsx --exec 'yarn dev'",
    "lint": "tslint -p tsconfig.json",
    "prebuild": "rimraf lib",
    "build:prod": "NODE_ENV=production babel src --out-dir lib",
    "build": "run-s build:tsc build:parcel test",
    "clean": "rimraf build dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "docs:clean": "rimraf docs",
    "docs:create": "typedoc --out './docs' --readme './README.md' --module 'commonjs'",
    "docs:deploy": "ts-node ./tools/gh-pages-publish",
    "docs:update": "run-s docs:clean docs:create docs:deploy",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "semantic-release": "semantic-release",
    "precommit": "lint-staged",
    "dev:run": "node build/index.js",
    "dev": "run-s build dev:run",
    "code:prod": "NODE_ENV=production node build/code.js",
    "code:build": "run-s build:tsc build:parcel",
    "code:run": "node build/code.js",
    "code": "run-s code:build code:run"
  },
  "dependencies": {
    "@types/graceful-fs": "^4.1.2",
    "@types/mkdirp": "^0.5.2",
    "graceful-fs": "^4.1.15",
    "mkdirp": "^0.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "7.3.2",
    "@commitlint/config-conventional": "7.3.1",
    "@semantic-release/changelog": "3.0.2",
    "@semantic-release/git": "7.0.8",
    "@semantic-release/npm": "5.1.4",
    "@types/jest": "23.3.13",
    "@types/node": "10.12.18",
    "@types/rimraf": "2.0.2",
    "babel-core": "6.26.3",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.2",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.7.0",
    "commitizen": "3.0.5",
    "coveralls": "3.0.2",
    "cross-env": "5.2.0",
    "husky": "1.3.1",
    "jest": "23.6.0",
    "lint-staged": "8.1.0",
    "nodemon": "1.18.9",
    "npm-run-all": "4.1.5",
    "parcel-bundler": "1.11.0",
    "parcel-plugin-typescript": "1.0.0",
    "prettier": "1.16.0",
    "rimraf": "2.6.3",
    "semantic-release": "15.13.3",
    "ts-jest": "23.10.5",
    "ts-node": "8.0.1",
    "tslint": "5.12.1",
    "tslint-config-airbnb": "5.11.1",
    "tslint-config-prettier": "1.17.0",
    "typedoc": "0.14.2",
    "typescript": "3.2.4"
  }
}
